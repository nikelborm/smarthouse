{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "yarn; rimraf dist; nest build",
    "mock": "cd ../mock && yarn devMock && cd ../backend",
    "prestart": "yarn; yarn pgrun; yarn pgstart; yarn pgrm; yarn migrate",
    "start": "nest start",
    "prod": "cd ../frontend; yarn; rm -rf ./build; yarn buildrpi; cd ../backend; yarn migrate; cp -rf ./.env ./dist/.env; rm -rf ./build; cp -rf ../frontend/build ./build; node dist/main",
    "fix": "cd ../mock; yarn devMock && cd ../backend && yarn nest start --watch",
    "typeorm": "f() { node --require ts-node/register ./node_modules/typeorm/cli.js \"$@\" -d src/config/data-source;}; f",
    "query": "yarn typeorm query",
    "ormgen": "f() { yarn prestart && yarn typeorm migration:generate -p src/modules/infrastructure/migration/\"$@\";}; f",
    "dbdoc": "rm src/modules/infrastructure/migration/all_migrations.dbml && yarn sql2dbml src/modules/infrastructure/migration/all_migrations.sql -o src/modules/infrastructure/migration/all_migrations.dbml --postgres",
    "dbdoc:publish": "dbdocs build src/modules/infrastructure/migration/all_migrations.dbml --project Smarthouse",
    "migrate": "yarn build && yarn typeorm migration:run",
    "migrate-undo": "yarn typeorm migration:revert",
    "pgrun": "docker run --name smarthouse-pgdocker -e POSTGRES_PASSWORD=smarthouse -e POSTGRES_USER=smarthouse -e POSTGRES_DB=smarthouse -d -p 5433:5432 -v $HOME/pg_smarthouse:/var/lib/postgresql/data postgres",
    "pgstart": "docker start smarthouse-pgdocker",
    "psql": "docker exec -it smarthouse-pgdocker psql -U smarthouse",
    "pgstop": "docker stop smarthouse-pgdocker",
    "pgrm": "yarn typeorm schema:drop",
    "pgrmhard": "sudo rm -rf ~/pg_smarthouse; docker stop smarthouse-pgdocker; docker rm smarthouse-pgdocker; yarn pgrun; yarn pgstart;",
    "pgip": "docker inspect -f '{{range.NetworkSettings.Networks}}{{.IPAddress}}{{end}}' smarthouse-pgdocker"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.7",
    "@nestjs/common": "^8.2.3",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.2.3",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.2.3",
    "@nestjs/platform-socket.io": "^8.2.5",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/swagger": "^5.1.5",
    "@nestjs/typeorm": "8.0.3",
    "@nestjs/websockets": "^8.2.5",
    "@nestjsi/typeorm-pg": "0.2.3",
    "bcrypt": "^5.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "^0.13.2",
    "connect-pg-simple": "^7.0.0",
    "dataloader": "^2.0.0",
    "dotenv": "^16.0.0",
    "express-session": "^1.17.2",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "8.7.3",
    "postgres": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "source-map-support": "^0.5.20",
    "swagger-ui-express": "^4.2.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typeorm": "0.3.4",
    "typescript": "^4.5.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@dbml/cli": "^2.3.1",
    "@nestjs/cli": "^8.1.5",
    "@nestjs/schematics": "^8.0.5",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.11",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/pg": "8.6.5",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "dbdocs": "^0.6.1",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1"
  }
}
